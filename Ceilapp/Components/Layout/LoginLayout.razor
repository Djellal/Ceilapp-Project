@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<LoginLayout> L

<RadzenComponents />

<style>
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('images/login.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    .login-card {
        width: 100%;
        max-width: 1200px;
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.25);
        border: 1px solid rgba(255,255,255,0.1);
        overflow: hidden;
        background: rgba(255,255,255,0.95);
    }

    .brand-section {
        background: linear-gradient(135deg, var(--rz-primary) 0%, var(--rz-primary-darker) 100%);
        position: relative;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 400px;
        padding: 2rem;
    }

    .brand-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="50" r="0.5" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .brand-content {
        position: relative;
        z-index: 1;
    }

    .logo-image {
        width: 180px;
        height: auto;
        filter: drop-shadow(0 8px 16px rgba(0,0,0,0.3));
        transition: transform 0.3s ease;
    }

    .logo-image:hover {
        transform: scale(1.05);
    }

    .welcome-title {
        font-weight: 700;
        letter-spacing: 0.5px;
        margin: 1.5rem 0 0.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .welcome-subtitle {
        line-height: 1.6;
        opacity: 0.95;
        font-weight: 400;
    }

    .form-section {
        padding: 3rem 2rem;
        background: rgba(255,255,255,0.98);
        min-height: 400px;
        display: flex;
        align-items: center;
    }

    .footer-text {
        text-shadow: 0 1px 2px rgba(0,0,0,0.3);
        backdrop-filter: blur(5px);
        background: rgba(0,0,0,0.1);
        padding: 0.5rem 1rem;
        border-radius: 15px;
        margin-top: 1.5rem;
    }

    /* Mobile optimizations */


        .login-card {
            border-radius: 15px;
            margin: 0;
            min-height: 100vh;
        }

        .brand-section {
            min-height: 300px;
            padding: 1.5rem 1rem;
        }

        .logo-image {
            width: 140px;
        }

        .welcome-title {
            font-size: 1.5rem !important;
            margin: 1rem 0 0.5rem;
        }

        .welcome-subtitle {
            font-size: 0.9rem !important;
        }

        .form-section {
            padding: 2rem 1.5rem;
            min-height: auto;
        }

        .footer-text {
            font-size: 0.8rem !important;
            margin-top: 1rem;
            padding: 0.4rem 0.8rem;
        }
    }

    /* Extra small devices */
           .login-card {
            border-radius: 0;
            min-height: 100vh;
        }

        .brand-section {
            min-height: 250px;
            padding: 1rem;
        }

        .logo-image {
            width: 120px;
        }

        .form-section {
            padding: 1.5rem 1rem;
        }
    }

   
        .login-card {
            margin: 0.5rem 0;
            min-height: auto;
        }

        .brand-section {
            min-height: 200px;
            padding: 1rem;
        }

        .form-section {
            padding: 1.5rem;
        }
    }
</style>

<div class="login-container">
    <RadzenCard Class="login-card">
        <RadzenRow Gap="0" Class="rz-m-0">
            <RadzenColumn Size="12" SizeSM="12" SizeMD="6" Class="brand-section">
                <div class="brand-content">
                    <RadzenImage Path="images/ceillogo.png" Class="logo-image"></RadzenImage>
                    <RadzenText TextStyle="Radzen.Blazor.TextStyle.H3" Class="rz-color-white welcome-title">
                        Bienvenue sur CEIL UFAS1
                    </RadzenText>
                    <RadzenText TextStyle="Radzen.Blazor.TextStyle.Body1" Class="rz-color-white welcome-subtitle">
                        Procédez à l'inscription pour utiliser notre plateforme d'apprentissage moderne
                    </RadzenText>
                </div>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeSM="12" SizeMD="6" Class="form-section">
                <div style="width: 100%;">
                    @Body
                </div>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>
    
    
</div>
