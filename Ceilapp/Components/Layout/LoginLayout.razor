@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<LoginLayout> L

<RadzenComponents />

<RadzenLayout style="background: url('images/login.jpg'); background-size: cover; background-position: center;">
    <RadzenBody>
        <RadzenStack JustifyContent="Radzen.JustifyContent.Center" Class="rz-mx-auto rz-p-4" Style="max-width: 1440px; height: 100vh;">
            <RadzenCard class="rz-shadow-8 rz-border-radius-6" style="padding: 0; overflow: hidden; background-color: var(--rz-base-background-color); backdrop-filter: blur(10px);">
                <RadzenRow Gap="0">
                    <RadzenColumn Size="12" SizeSM="6" Class="rz-background-color-primary rz-p-12" style="background-image: linear-gradient(135deg, var(--rz-primary) 0%, var(--rz-primary-darker) 100%); position: relative; text-align: center">
                        <div class="rz-mt-8">
                            <RadzenImage Path="images/ceillogo.png" style="width: 200px; height: auto; filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2))"></RadzenImage>
                            <RadzenText TextStyle="Radzen.Blazor.TextStyle.H3" Class="rz-color-white rz-mt-6 rz-mb-2" style="font-weight: 600; letter-spacing: 0.5px">
                                Bienvenue sur CEIL UFAS1</RadzenText>
                            <RadzenText TextStyle="Radzen.Blazor.TextStyle.Body1" Class="rz-color-white rz-mt-4" style="line-height: 1.6">
                                Procédez à l'inscription pour utiliser notre plateforme
                            </RadzenText>
                        </div>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeSM="6" class="rz-p-12" style="background-color: rgba(255,255,255,0.95)">
                        @Body
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
            <RadzenText Text="Ceilapp v1.0.0, Copyright Ⓒ 2025" TextStyle="Radzen.Blazor.TextStyle.Caption" TextAlign="Radzen.TextAlign.Center" Class="rz-mt-6 rz-mb-4" Style="width: 100%; color: rgba(255,255,255,0.8);" TagName="Radzen.Blazor.TagName.P"/>
        </RadzenStack>
    </RadzenBody>
</RadzenLayout>
