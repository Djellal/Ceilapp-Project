@page "/course-registrations"

@attribute [Authorize]

<PageTitle>Course Registrations</PageTitle>

<RadzenRow AlignItems="AlignItems.Center">
    <RadzenColumn Size="12" SizeMD="6">
        
        <RadzenText Text="Course Registrations" TextStyle="Radzen.Blazor.TextStyle.H5" TagName="Radzen.Blazor.TagName.H5" style="margin: 0" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
<RadzenPanel Text="Filtre" Icon="filter_alt" AllowCollapse="true">
    <RadzenStack>
        
        <RadzenStack Orientation="Radzen.Orientation.Horizontal">
        <RadzenDropDown TValue="int?" @bind-Value="@SelectedSession" ValueProperty="Id" TextProperty="SessionName" Data="@sessions" Placeholder="Filtrer par Session" Change="@DropDown0Change" AllowClear="true" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive"/>
                <RadzenButton Text="Session en cours" Icon="today" Click="@Button0Click"></RadzenButton>
                <RadzenSelectBar TValue="bool?" @bind-Value="@Validated" Size="Radzen.ButtonSize.Small">
                    <Items>
                        <RadzenSelectBarItem Text="TOUS" Value="null" Icon="list"></RadzenSelectBarItem>
                        <RadzenSelectBarItem Text="VALIDES" Value="true" Icon="check"></RadzenSelectBarItem>
                        <RadzenSelectBarItem Text="NON VALIDES" Value="false" Icon="check_indeterminate_small"></RadzenSelectBarItem>
                    </Items>
                </RadzenSelectBar>
        </RadzenStack>
        <RadzenRow>
            <RadzenColumn Size="12" SizeXS="6">
                <RadzenDropDown TValue="int?" @bind-Value="@SelectedCourse" ValueProperty="Id" TextProperty="Name" Data="@courses" Style="width: 100%" Placeholder="Filtrer par Course" Change="@DropDown1Change" AllowClear="true" AllowSelectAll="false" AllowFiltering="true" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" />
            </RadzenColumn>
            <RadzenColumn Size="12" SizeXS="6">
                <RadzenDropDown TValue="int?" @bind-Value="@SelectedLevel" ValueProperty="Id" TextProperty="Name" Data="@courseLevels" Style="width: 100%" Placeholder="Filtrer par Level" Change="@DropDown2Change" AllowClear="true" AllowSelectAll="false" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" />
            </RadzenColumn>
        </RadzenRow>
    </RadzenStack>
</RadzenPanel>
<RadzenStack>

    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(courseRegistrations)" TItem="Ceilapp.Models.ceilapp.CourseRegistration" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="InscriptionCode" Title="Inscription Code" Width="150px">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="FirstName" Title="First Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="LastName" Title="Last Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="Profession.Name" Title="Profession">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="Course.Name" Title="Course">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="CourseLevel.NameAr" Title="Course Level">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="PaidFeeValue" Title="Paid Fee Value">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Property="RegistrationValidated" Title="Registration Validated">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseRegistration" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="courseRegistration">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, courseRegistration)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
