@page "/registration/{isnew:bool}"

@attribute [Authorize]

<PageTitle>Registration</PageTitle>
<RadzenStack>
    <RadzenAlert AlertStyle="Radzen.AlertStyle.Danger" Shade="Radzen.Shade.Light" AllowClose="false" @bind-Visible="@errorVisible" Size="Radzen.AlertSize.Small" Title="@L["ErrorSaving"]"></RadzenAlert>
    <RadzenFieldset Text="@L["PersonelInfos"]" Icon="account_circle">
         <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Inscription Code" Component="InscriptionCode" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.InscriptionCode" Name="InscriptionCode" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Component="FirstName" style="width: 100%" Text="@L["FirstName"]" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.FirstName" Name="FirstName" />
              <RadzenRequiredValidator Component="FirstName" Text="FirstName is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Last Name" Component="LastName" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.LastName" Name="LastName" />
              <RadzenRequiredValidator Component="LastName" Text="LastName is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="First Name Ar" Component="FirstNameAr" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.FirstNameAr" Name="FirstNameAr" />
              <RadzenRequiredValidator Component="FirstNameAr" Text="FirstNameAr is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Last Name Ar" Component="LastNameAr" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.LastNameAr" Name="LastNameAr" />
              <RadzenRequiredValidator Component="LastNameAr" Text="LastNameAr is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Birth Date" Component="BirthDate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDatePicker style="display: block; width: 100%" @bind-Value="courseRegistration.BirthDate" Name="BirthDate" />
              <RadzenRequiredValidator Component="BirthDate" Text="BirthDate is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="State" Component="State" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="NameAr" ValueProperty="Id" Placeholder="Choose State" style="display: block; width: 100%" @bind-Value="courseRegistration.BirthStateId" Name="BirthStateId" Data="@statesForBirthStateId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Municipality" Component="Municipality" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="StateId" ValueProperty="Id" Placeholder="Choose Municipality" style="display: block; width: 100%" @bind-Value="courseRegistration.BirthMunicipalityId" Name="BirthMunicipalityId" Data="@municipalitiesForBirthMunicipalityId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Address" Component="Address" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.Address" Name="Address" />
              <RadzenRequiredValidator Component="Address" Text="Address is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Tel" Component="Tel" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.Tel" Name="Tel" />
              <RadzenRequiredValidator Component="Tel" Text="Tel is required" />
            </RadzenColumn>
        </RadzenRow>
    </RadzenFieldset>
    <RadzenTemplateForm TItem="Ceilapp.Models.ceilapp.CourseRegistration" Data="@courseRegistration">
       
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Profession" Component="Profession" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="NameAr" ValueProperty="Id" Placeholder="Choose Profession" style="display: block; width: 100%" @bind-Value="courseRegistration.ProfessionId" Name="ProfessionId" Data="@professionsForProfessionId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Course" Component="Course" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="Image" ValueProperty="Id" Placeholder="Choose Course" style="display: block; width: 100%" @bind-Value="courseRegistration.CourseId" Name="CourseId" Data="@coursesForCourseId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Course Level" Component="CourseLevel" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="NameAr" ValueProperty="Id" Placeholder="Choose CourseLevel" style="display: block; width: 100%" @bind-Value="courseRegistration.CourseLevelId" Name="CourseLevelId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Session" Component="Session" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDropDown TextProperty="SessionNameAr" ValueProperty="Id" Placeholder="Choose Session" style="display: block; width: 100%" @bind-Value="courseRegistration.SessionId" Name="SessionId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Registration Date" Component="RegistrationDate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenDatePicker style="display: block; width: 100%" @bind-Value="courseRegistration.RegistrationDate" Name="RegistrationDate" />
              <RadzenRequiredValidator Component="RegistrationDate" Text="RegistrationDate is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Notes" Component="Notes" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenTextBox style="display: block; width: 100%" @bind-Value="courseRegistration.Notes" Name="Notes" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Paid Fee Value" Component="PaidFeeValue" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenNumeric style="display: block; width: 100%" @bind-Value="courseRegistration.PaidFeeValue" Name="PaidFeeValue" />
              <RadzenRequiredValidator Component="PaidFeeValue" Text="PaidFeeValue is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Registration Terms Accepted" Component="RegistrationTermsAccepted" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenCheckBox @bind-Value="courseRegistration.RegistrationTermsAccepted" Name="RegistrationTermsAccepted" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Registration Validated" Component="RegistrationValidated" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
              <RadzenCheckBox @bind-Value="courseRegistration.RegistrationValidated" Name="RegistrationValidated" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenStack>
