@page "/course-fees"

@attribute [Authorize]

<PageTitle>CourseFees</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Prix des cours par profession" TextStyle="Radzen.Blazor.TextStyle.H4" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow AlignItems="AlignItems.Center"><RadzenColumn  Size="12" SizeMD="12">
    <RadzenDropDown TValue="int?" @bind-Value="@SelectedCourse" ValueProperty="Id" TextProperty="Name" Data="@coursesForCourseId" Style="width: 100%" Placeholder="Filtrer par Course" Change="@CoursDropDownChange" AllowClear="true" AllowSelectAll="false" AllowFiltering="true" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" />
           
    </RadzenColumn></RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(courseFees)" RowUpdate="@GridRowUpdate" RowCreate="@GridRowCreate" TItem="Ceilapp.Models.ceilapp.CourseFee">
            <Columns>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseFee" Property="Course.Name" Title="Course">
                                  <EditTemplate Context="courseFee">
                                    <RadzenFormField Text="Course" Variant="Variant.Filled">
                                     <ChildContent>
                                    <RadzenDropDown Data="@(coursesForCourseId)" TextProperty="Name" ValueProperty="Id" AllowClear=true
                                         style="display: block; width: 100%" @bind-Value="@(courseFee.CourseId)" Name="CourseId"
                                           />
                                    </ChildContent>
                                   </RadzenFormField>
                                  </EditTemplate>
                                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseFee" Property="Profession.Name" Title="Profession">
                  <EditTemplate Context="courseFee">
                    <RadzenFormField Text="Profession" Variant="Variant.Filled">
                     <ChildContent>
                    <RadzenDropDown Data="@(professionsForProfessionId)" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         style="display: block; width: 100%" @bind-Value="@(courseFee.ProfessionId)" Name="ProfessionId"
                           />
                    </ChildContent>
                   </RadzenFormField>
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseFee" Property="FeeValue" Title="Fee Value">
                  <EditTemplate Context="courseFee">
                    <RadzenFormField Text="Fee Value" Variant="Variant.Filled">
                     <ChildContent>
                      <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(courseFee.FeeValue)" Name="FeeValue" />
                     </ChildContent>
                     <Helper>
                      <RadzenRequiredValidator Component="FeeValue" Text="FeeValue is required"  />
                     </Helper>
                   </RadzenFormField>
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.CourseFee" Filterable="false" Sortable="false" Width="156px" TextAlign="TextAlign.Center">
                    <EditTemplate Context="courseFee">
                        <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => SaveButtonClick(args, courseFee)) @onclick:stopPropagation="true" />
                        <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            Click=@(args => CancelButtonClick(args, courseFee)) @onclick:stopPropagation="true" />
                    </EditTemplate>
                    <Template Context="courseFee">

                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => EditButtonClick(args, courseFee)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, courseFee)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
