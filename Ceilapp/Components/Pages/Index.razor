@page "/"

<PageTitle>Index</PageTitle>
@inject Microsoft.Extensions.Localization.IStringLocalizer<Index> L


<RadzenCard Style="text-align: center; padding-top: 0px">
    <RadzenImage Path="images/ceillogo.png" Style="width: 150px"></RadzenImage>
    <RadzenText TextStyle="Radzen.Blazor.TextStyle.H6" TextAlign="Radzen.TextAlign.Center" Style="font-style: italic; font-family: 'Comic Sans MS'" Text="Le Centre d'Enseignement Intensif des Langues (CEIL-UFAS-1) fait partie des services communs de l'université. Il propose un service public d'enseignement des langues destiné en premier lieu aux membres de la communauté universitaire (étudiants, enseignants et fonctionnaires) mais aussi aux externes dans le cadre de conventions ou à tout individu voulant améliorer son niveau de langue." />
    <RadzenStack AlignItems="Radzen.AlignItems.Center" JustifyContent="Radzen.JustifyContent.SpaceAround" Orientation="Radzen.Orientation.Horizontal" Gap="2rem" Style="margin-top: 3em">
        <RadzenButton Icon="login" Size="Radzen.ButtonSize.Large" 
                    Click="@LoginButtonClick"
                    Style="background: #007bff; padding: 0.8rem 2rem; font-weight: 600;"
                    class="auth-button" Text="Se connecter"></RadzenButton>
        <RadzenButton ButtonStyle="Radzen.ButtonStyle.Success" 
                    Icon="how_to_reg" Size="Radzen.ButtonSize.Large"
                    Style="padding: 0.8rem 2rem; font-weight: 600;"
                    class="auth-button" Click="@RegisterButtonClick" Text="S'enregistrer"></RadzenButton>
    </RadzenStack>
</RadzenCard>
<RadzenCard Style="margin-top: 2em">
    <RadzenText TextStyle="Radzen.Blazor.TextStyle.H5" Class="rz-mb-6" TextAlign="TextAlign.Center" Style="font-weight: 700" Text="Cours disponibles"/>
    <RadzenDataList TItem="Models.ceilapp.Course" Data="@courses" WrapItems="true" AllowPaging="false" PageSize="10" Style="gap: 20px;">
        <Template>
            <RadzenCard Style="width: 250px; margin: 10px; padding: 20px; border-radius: 12px;" Class="course-card">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" Gap="1.5rem">
                    <div class="image-container" style="background-color: rgba(255, 255, 255, 0)">
                        <RadzenImage Style="height: 140px; width: 140px; object-fit: cover; border-radius: 8px;" Path="@context.Image" Class="rz-mb-2"/>
                    </div>
                    <RadzenHeading Text="@context.Name" Size="H4" Style="margin: 0; color: #2a2a2a; font-weight: 600; text-align: center;"/>
                    <RadzenButton Text="Learn More" ButtonStyle="ButtonStyle.Secondary" 
                                Size="ButtonSize.Medium" 
                                Style="width: 100%; border-radius: 6px;"
                                Class="learn-more-btn"/>
                </RadzenStack>
            </RadzenCard>
        </Template>
    </RadzenDataList>
</RadzenCard>

<style>
    .hero-section {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 20px 0;
    }

    .course-card {
        transition: all 0.3s ease-in-out;
        background: white;
    }

    .course-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .image-container {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth-button {
        transition: all 0.2s ease-in-out;
    }

    .auth-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .learn-more-btn {
        transition: all 0.2s ease-in-out;
    }

    .learn-more-btn:hover {
        transform: scale(1.02);
    }
</style>
