
@page "/register-application-user"

@inject Microsoft.Extensions.Localization.IStringLocalizer<RegisterApplicationUser> L

<RadzenRow AlignItems="Radzen.AlignItems.Center" Style="border-radius: 15px; border: 5px solid #423dc8; background-color: rgba(64, 66, 210, 0)">
    <RadzenColumn Size="12" SizeSM="6" Class="rz-background-color-primary rz-p-12" style="background-image: linear-gradient(135deg, var(--rz-primary) 0%, var(--rz-primary-darker) 100%); position: relative; text-align: center">
        <div class="rz-mt-8">
            <RadzenImage Path="images/ceillogo.png" style="width: 200px; height: auto; filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2))"></RadzenImage>
            <RadzenText TextStyle="Radzen.Blazor.TextStyle.H3" Class="rz-color-white rz-mt-6 rz-mb-2" style="font-weight: 600; letter-spacing: 0.5px">
                Bienvenue sur CEIL UFAS1</RadzenText>
            <RadzenText TextStyle="Radzen.Blazor.TextStyle.Body1" Class="rz-color-white rz-mt-4" style="line-height: 1.6">
                Procédez à l'inscription pour utiliser notre plateforme
            </RadzenText>
        </div>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeXS="6">
        <RadzenTemplateForm Data="@user" TItem="Ceilapp.Models.ApplicationUser"
            Visible="@(user != null)" Submit="@FormSubmit">                    
            <RadzenAlert class="mb-6" Shade="Shade.Lighter" Variant="Variant.Flat" 
                Size="AlertSize.Medium" AlertStyle="AlertStyle.Danger" 
                Visible="@errorVisible">
                <div class="flex items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <span>@error</span>
                </div>
            </RadzenAlert>
        
            <RadzenStack Gap="2rem">
                <RadzenFormField Text="Adresse Email" Variant="Variant.Filled">
                    <ChildContent>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                            <RadzenTextBox style="display: block; width: 100%"  
                                @bind-Value="@(user.Email)" 
                                Name="UserName"
                                Placeholder="vous@exemple.com"
                                aria-label="Champ d'adresse email" />
                        </div>
                    </ChildContent>
                    <Helper>
                        <RadzenRequiredValidator Component="UserName" 
                            Text="Veuillez saisir votre adresse email" 
                            Style="color: var(--rz-danger-lighter);" />
                    </Helper>
                </RadzenFormField>
        
                <RadzenFormField Text="Mot de passe" Variant="Variant.Filled">
                    <ChildContent>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <RadzenPassword style="display: block; width: 100%" 
                                @bind-Value="@(user.Password)" 
                                Name="Password"
                                Placeholder="••••••••"
                                aria-label="Champ de mot de passe" />
                        </div>
                    </ChildContent>
                    <Helper>
                        <RadzenRequiredValidator Component="Password" 
                            Text="Veuillez saisir un mot de passe"
                            Style="color: var(--rz-danger-lighter);" />
                    </Helper>
                </RadzenFormField>
        
                <RadzenFormField Text="Confirmer le mot de passe" Variant="Variant.Filled">
                    <ChildContent>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                            <RadzenPassword style="display: block; width: 100%" 
                                @bind-Value="@(user.ConfirmPassword)" 
                                Name="ConfirmPassword"
                                Placeholder="••••••••"
                                aria-label="Champ de confirmation du mot de passe" />
                        </div>
                    </ChildContent>
                    <Helper>
                        <RadzenRequiredValidator Component="ConfirmPassword" 
                            Text="Veuillez confirmer votre mot de passe"
                            Style="color: var(--rz-danger-lighter);" />
                    </Helper>
                </RadzenFormField>
            </RadzenStack>
        
            <div class="mt-8 space-y-4 sm:space-y-0 sm:flex sm:justify-between sm:items-center">
                
            </div>
            <RadzenStack Orientation="Radzen.Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.SpaceBetween" Style="margin: 1em; padding: 1em">
                <RadzenButton ButtonType="ButtonType.Submit" 
                                           
                                            Text="Créer le compte" 
                                            IsBusy="@isBusy" 
                                            BusyText="Configuration de votre compte..." 
                                            ButtonStyle="ButtonStyle.Primary"
                                            Size="Radzen.ButtonSize.Small"
                                            Icon="how_to_reg" />
                <RadzenButton ButtonStyle="Radzen.ButtonStyle.Light" 
                                           
                                            Text="Annuler" 
                                            Click="@CancelClick" 
                                            Variant="Radzen.Variant.Filled"
                                            Size="Radzen.ButtonSize.Small"
                                            Icon="cancel" />
            </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>
</RadzenRow>
