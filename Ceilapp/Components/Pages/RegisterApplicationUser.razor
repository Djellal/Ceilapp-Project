@layout LoginLayout
@page "/register-application-user"

@inject Microsoft.Extensions.Localization.IStringLocalizer<RegisterApplicationUser> L
<PageTitle>Register Application User</PageTitle>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <RadzenRow Class="justify-content-center" AlignItems="Radzen.AlignItems.Center" JustifyContent="Radzen.JustifyContent.Center">
        <RadzenColumn SizeSM="11" SizeMD="8" SizeLG="6" SizeXL="4" Size="12">
            <div class="bg-white rounded-xl shadow-lg p-6 sm:p-8">
                <div class="text-center">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Account</h1>
                </div>

                <RadzenTemplateForm Data="@user" TItem="Ceilapp.Models.ApplicationUser"
                    Visible="@(user != null)" Submit="@FormSubmit">
                    
                    <RadzenAlert class="mb-6" Shade="Shade.Lighter" Variant="Variant.Flat" 
                        Size="AlertSize.Medium" AlertStyle="AlertStyle.Danger" 
                        Visible="@errorVisible">
                        <div class="flex items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <span>@error</span>
                        </div>
                    </RadzenAlert>

                    <RadzenStack Gap="2rem">
                        <RadzenFormField Text="Email Address" Variant="Variant.Filled">
                            <ChildContent>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                    <RadzenTextBox class="w-100" 
                                        @bind-Value="@(user.Email)" 
                                        Name="UserName"
                                        Placeholder="you@example.com"
                                        aria-label="Email address input" />
                                </div>
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="UserName" 
                                    Text="Please enter your email address" 
                                    Style="color: var(--rz-danger-lighter);" />
                            </Helper>
                        </RadzenFormField>

                        <RadzenFormField Text="Password" Variant="Variant.Filled">
                            <ChildContent>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <RadzenPassword class="w-100"
                                        @bind-Value="@(user.Password)" 
                                        Name="Password"
                                        Placeholder="••••••••"
                                        aria-label="Password input" />
                                </div>
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="Password" 
                                    Text="Please enter a password"
                                    Style="color: var(--rz-danger-lighter);" />
                            </Helper>
                        </RadzenFormField>

                        <RadzenFormField Text="Confirm Password" Variant="Variant.Filled">
                            <ChildContent>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                    <RadzenPassword class="w-100"
                                        @bind-Value="@(user.ConfirmPassword)" 
                                        Name="ConfirmPassword"
                                        Placeholder="••••••••"
                                        aria-label="Confirm password input" />
                                </div>
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="ConfirmPassword" 
                                    Text="Please confirm your password"
                                    Style="color: var(--rz-danger-lighter);" />
                            </Helper>
                        </RadzenFormField>
                    </RadzenStack>

                    <div class="mt-8 space-y-4 sm:space-y-0 sm:flex sm:justify-between sm:items-center">
                        <RadzenButton ButtonType="ButtonType.Submit" 
                           
                            Text="Create Account" 
                            IsBusy="@isBusy" 
                            BusyText="Setting up your account..." 
                            ButtonStyle="ButtonStyle.Primary"
                            Size="ButtonSize.Large"
                            Icon="how_to_reg" Style="width: 100%" />
                        
                        <RadzenButton ButtonStyle="Radzen.ButtonStyle.Light" 
                           
                            Text="Cancel" 
                            Click="@CancelClick" 
                            Variant="Radzen.Variant.Filled"
                            Size="ButtonSize.Large"
                            Icon="cancel" Style="width: 100%" />
                    </div>
                </RadzenTemplateForm>
            </div>
        </RadzenColumn>
    </RadzenRow>
</div>
