@page "/edit-evaluation"
@attribute [Authorize]

<PageTitle>Edit Evaluation</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Evaluation</RadzenAlert>
        <RadzenTemplateForm TItem="Ceilapp.Models.ceilapp.Evaluation" Data="@(evaluation)" Visible="@(evaluation != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Course Registration" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDown Data="@(courseRegistrationsForCourseRegistrationId)" TextProperty="Notes" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@(evaluation.CourseRegistrationId)" Name="CourseRegistrationId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Course" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDown Data="@(coursesForCourseComponentId)" TextProperty="Image" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@(evaluation.CourseComponentId)" Name="CourseComponentId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Eval" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(evaluation.Eval)" Name="Eval" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Eval" Text="Eval is required" />
                  </Helper>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

