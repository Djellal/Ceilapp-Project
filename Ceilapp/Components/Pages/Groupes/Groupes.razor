@page "/groupes"

@attribute [Authorize]

<PageTitle>Groupes</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Groupes" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    
    <!-- Filter Section -->
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="4">
            <RadzenLabel Text="Filter by Course:" />
            <RadzenDropDown Data="@courses" TextProperty="Name" ValueProperty="Id" @bind-Value="@selectedCourseId" 
                          Change="@OnCourseFilterChange" Placeholder="Select Course" Style="width: 100%" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="4">
            <RadzenLabel Text="Filter by Course Level:" />
            <RadzenDropDown Data="@courseLevels" TextProperty="Name" ValueProperty="Id" @bind-Value="@selectedCourseLevelId" 
                          Change="@OnCourseLevelFilterChange" Placeholder="Select Course Level" Style="width: 100%" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="4" Style="display: flex; align-items: flex-end;">
            <RadzenButton Icon="clear" Text="Clear Filters" Click="@ClearFilters" Variant="Variant.Outlined" 
                         Style="margin-top: 24px; width: 100%" />
        </RadzenColumn>
    </RadzenRow>
    
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(groupes)" TItem="Ceilapp.Models.ceilapp.Groupe" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Property="GroupeName" Title="Groupe Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Property="Course.Name" Title="Course">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Property="CourseLevel.NameAr" Title="Course Level">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Property="Session.SessionNameAr" Title="Session">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Property="NbrPlaces" Title="Nbr Places">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ceilapp.Models.ceilapp.Groupe" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="groupe">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, groupe)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
